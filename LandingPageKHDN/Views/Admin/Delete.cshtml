@model LandingPageKHDN.Application.ViewModels.CompanyRegistrationGetViewModel

@{
    ViewData["Title"] = "Xóa doanh nghiệp";
}
<link rel="stylesheet" href="~/css/admin-delete.css" />

<div class="admin-delete-container">
    <div class="admin-delete-card">
        <h2 class="admin-delete-title">Xóa doanh nghiệp</h2>
        <div class="admin-delete-warning">
            <i class="fa fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa thông tin này?
        </div>
        <hr />
        <dl class="row admin-details-dl">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CompanyName)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CompanyName)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TaxCode)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TaxCode)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LegalRepName)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LegalRepName)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LegalRepId)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LegalRepId)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LegalRepPosition)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LegalRepPosition)</dd>

            <dt class="col-sm-4">Giấy phép KD</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.BusinessLicenseFilePath))
                {
                    <a href="@Model.BusinessLicenseFilePath" target="_blank" class="btn btn-sm btn-outline-success">Xem file</a>
                }
                else
                {
                    <span class="text-muted">Không có</span>
                }
            </dd>

            <dt class="col-sm-4">CMND/CCCD</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.LegalRepIdfilePath))
                {
                    <a href="@Model.LegalRepIdfilePath" target="_blank" class="btn btn-sm btn-outline-success">Xem file</a>
                }
                else
                {
                    <span class="text-muted">Không có</span>
                }
            </dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-8">
                @if (Model.Status ?? true)
                {
                    <span class="badge bg-success">Đã xác nhận</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Chưa xác nhận</span>
                }
            </dd>
        </dl>
        <form asp-action="Delete" class="d-flex gap-2 mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btnRegister flex-fill">
                <i class="fa fa-trash"></i> Xóa
            </button>
            <a class="btn btn-secondary flex-fill" asp-action="Index">Quay lại danh sách</a>
        </form>
    </div>
</div>
