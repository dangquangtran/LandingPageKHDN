@model LandingPageKHDN.Application.ViewModels.CompanyRegistrationUpdateViewModel

@{
    ViewData["Title"] = "Cập nhật doanh nghiệp";
}
<link rel="stylesheet" href="~/css/admin-edit.css" />

<div class="admin-edit-container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="admin-edit-form">
        <h2>Cập nhật doanh nghiệp</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="CompanyName" class="form-label"></label>
            <input asp-for="CompanyName" class="form-control" placeholder="VD: Công ty TNHH ABC" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TaxCode" class="form-label"></label>
            <input asp-for="TaxCode" class="form-control" placeholder="VD: 1234567890" />
            <span asp-validation-for="TaxCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" placeholder="VD: 123 Lê Lợi, Quận 1, TP.HCM" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="VD: 0909123456" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="VD: email@congty.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LegalRepName" class="form-label"></label>
            <input asp-for="LegalRepName" class="form-control" placeholder="VD: Nguyễn Văn A" />
            <span asp-validation-for="LegalRepName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LegalRepId" class="form-label"></label>
            <input asp-for="LegalRepId" class="form-control" placeholder="VD: 012345678901" />
            <span asp-validation-for="LegalRepId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LegalRepPosition" class="form-label"></label>
            <input asp-for="LegalRepPosition" class="form-control" placeholder="VD: Giám đốc" />
            <span asp-validation-for="LegalRepPosition" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BusinessLicenseFile" class="form-label"></label>
            <input asp-for="BusinessLicenseFile" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
            <span asp-validation-for="BusinessLicenseFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LegalRepIDFile" class="form-label"></label>
            <input asp-for="LegalRepIDFile" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
            <span asp-validation-for="LegalRepIDFile" class="text-danger"></span>
        </div>
        <button class="btn btn-primary btnRegister" type="submit">Lưu thay đổi</button>
        <a class="btn btn-secondary w-100 mt-2" asp-action="Index">Quay lại danh sách</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
